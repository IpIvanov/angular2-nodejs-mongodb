{
  "name": "angular2-nodejs-mongodb",
  "version": "1.0.0",
  "description": "Angular 2 app with nodejs as backend server. Integrated easy deploy to heroku and connected to mLab - mongodb database storage.",
  "main": "server/app.js",
  "license": "MIT",
  "angular-cli": {},
  "scripts": {
    "start": "concurrently --kill-others \"ng serve --aot=true --proxy-config proxy.conf.json\" \"npm run _server:run\"",
    "lint": "tslint \"src/**/*.ts\"",
    "test": "ng test --watch=false",
    "pree2e": "webdriver-manager update",
    "e2e": "protractor",
    "build": "ng build --prod --sm=false --aot=true --output-path=dist/client && npm run _server:build",
    "_server:run": "tsc -p ./server && concurrently \"tsc -w -p ./server\" \"nodemon dist/server/bin/www.js\" ",
    "_server:build": "tsc -p ./server",
    "postinstall": "npm run build"
  },
  "author": "Ivan Ivanov",
  "repository": {
    "url": "https://github.com/IpIvanov/angular2-nodejs-mongodb"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^2.4.4",
    "@angular/compiler": "^2.4.4",
    "@angular/compiler-cli": "^2.4.4",
    "@angular/core": "^2.4.4",
    "@angular/forms": "^2.4.4",
    "@angular/http": "^2.4.4",
    "@angular/platform-browser": "^2.4.4",
    "@angular/platform-browser-dynamic": "^2.4.4",
    "@angular/router": "^3.4.4",
    "@ngrx/core": "^1.2.0",
    "@ngrx/effects": "^2.0.0",
    "@ngrx/store": "^2.2.1",
    "@ngrx/store-devtools": "^3.2.1",
    "@types/body-parser": "^0.0.32",
    "@types/compression": "^0.0.33",
    "@types/cors": "^0.0.33",
    "@types/express": "^4.0.32",
    "@types/jasmine": "^2.2.30",
    "@types/jsonwebtoken": "^7.1.31",
    "@types/node": "^6.0.48",
    "@types/node-uuid": "^0.0.28",
    "angular-cli": "1.0.0-beta.26",
    "body-parser": "~1.13.2",
    "compression": "^1.6.2",
    "cookie-parser": "~1.3.5",
    "core-js": "^2.4.1",
    "express": "^4.13.4",
    "express-jwt": "^3.3.0",
    "jsonwebtoken": "^5.7.0",
    "ngrx-store-freeze": "^0.1.6",
    "node-uuid": "^1.4.7",
    "normalize.css": "^5.0.0",
    "path": "^0.12.7",
    "rxjs": "^5.0.1",
    "ts-helpers": "^1.1.1",
    "ts-node": "1.2.1",
    "tslint": "^4.0.0",
    "typescript": "~2.0.3",
    "zone.js": "^0.7.2",
    "mongodb": "^2.2.22"
  },
  "devDependencies": {
    "codelyzer": "^2.0.0-beta.4",
    "concurrently": "^3.1.0",
    "jasmine-core": "2.4.1",
    "jasmine-spec-reporter": "2.5.0",
    "karma": "1.2.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-cli": "^1.0.1",
    "karma-jasmine": "^1.0.2",
    "karma-remap-istanbul": "^0.2.1",
    "nodemon": "^1.11.0",
    "protractor": "4.0.9",
    "webdriver-manager": "10.2.5"
  }
}
